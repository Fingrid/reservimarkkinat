{
  "name": "@apps/site",
  "packageManager": "yarn@4.6.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && yarn build:generate_index",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
