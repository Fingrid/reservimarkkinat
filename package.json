    "@tailwindcss/postcss": "^4.1.6",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "immer": "^10.1.1",
    "libxml2-wasm": "^0.5.0",
    "next": "^15.3.2",
    "nextra": "^4.2.17",
    "nextra-theme-docs": "^4.2.17",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shiki": "^3.4.1",
    "tailwindcss": "^4.1.6",
    "zustand": "^5.0.4"
