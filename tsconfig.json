{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}
